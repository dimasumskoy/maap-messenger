<h2>sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "name", class: "form-control custom-fields" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", placeholder: "email", class: "form-control custom-fields" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "password (6 characters minimum)", class: "form-control custom-fields password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password confirmation", class: "form-control custom-fields password" %>
  </div>

  <div class="actions">
    <%= f.submit "sign up", class: "btn btn-primary btn-signup" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
