<h2>sign up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), inline_errors: false) do |f| %>
    <%= f.text_field :name, placeholder: "name", class: "custom-fields" %>
    <%= f.email_field :email, placeholder: "email", class: "custom-fields" %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "password (6 characters minimum)", class: "custom-fields" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password confirmation", class: "custom-fields" %>

    <%= f.submit "sign up", class: "btn btn-primary btn-signup" %>
<% end %>

<%= render "devise/shared/links" %>
