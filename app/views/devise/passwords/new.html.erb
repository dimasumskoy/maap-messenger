<h2>forgot your password?</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), inline_errors: false, html: { method: :post }) do |f| %>
    <%= f.email_field :email, autofocus: true, class: "custom-fields", placeholder: "email" %>
    <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
