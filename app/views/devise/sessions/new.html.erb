<h2>log in</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.email_field :email, autofocus: true, class: "custom-fields", placeholder: "email" %>
  <%= f.password_field :password, autocomplete: "off", class: "custom-fields", placeholder: "password" %>

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me, label: "remember me", class: "form-check-input" %>
  <% end -%>

  <%= f.submit "log in", class: "btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
